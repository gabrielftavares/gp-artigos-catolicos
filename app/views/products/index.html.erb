<div class="container mt-5">
  <% @categories.each do |category| %>
    <div class="product-category background-cards my-3">
      <h2><%= category.name %>s</h2>
        <div class="cards">
        <% category.products.each do |product| %>
          <%= link_to product, class: 'no-decoration' do %>
            <div class="card-trip h-100">
              <%= cl_image_tag product.photo.key, crop: :fill   %>
            <div class="card-trip-infos">
              <div>
                <h2><%= product.name %></h2>
                <p class="desc"><%= product.description %></p>
              </div>
              <h2 class="card-trip-pricing">R$<%= product.price.to_i %>,00</h2>
            </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
